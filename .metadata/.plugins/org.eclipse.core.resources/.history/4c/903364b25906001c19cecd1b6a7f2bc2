package fundamentos;

public class Temperatura {

	public static void main(String[] args) {
		// (°F - 32) x 5/9 = °C
		
	    double temperaturaf = 0;
		double ajuste = 32;
		double fator = 5.0/9.0;
		double temperaturac; 
		
		temperaturaf = 100;
		temperaturac = (temperaturaf - ajuste) * fator;
		
		System.out.println(temperaturac);
	}
}
